@model EventsMVC.Models.RoleTable

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminNavbar.cshtml";
}
<link rel="stylesheet" href="~/css/Create.css" asp-append-version="true" />
 

<div class="card-container">
    <div class="toggle">
    </div>
    <div class="card login-register login-reset">
        <h1 class="title">Add Role</h1>
        <form asp-action="Create">
            <div class="input-container has-feedback">
                <input type="text" id="Username" asp-for="RoleName" placeholder="RoleName" />
                <div class="bar"></div>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="button-container">
                <button type="submit" value="Create" class="rkmd-btn btn-lightBlue ripple-effect float-right"><span>Add</span></button>
            </div>

        </form>
    </div>

</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
